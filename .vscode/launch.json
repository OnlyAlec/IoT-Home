{
  "configurations": [
    {
      "name": "Python: Flask RPI",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "API/wsgi.py",
        "FLASK_DEBUG": "1"
      },
      "args": [
        "run",
        "--no-debugger",
        "--host",
        "200.10.0.1",
        "--port",
        "8080"
      ],
      "jinja": true,
      "justMyCode": true,
      "cwd": "${fileDirname}"
    },
    {
      "name": "Python: Flask Local",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "API/wsgi.py",
        "FLASK_DEBUG": "1"
      },
      "args": [
        "run",
        "--no-debugger",
      ],
      "jinja": true,
      "justMyCode": true,
      "cwd": "${fileDirname}"
    },
    {
      "name": "Python: File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "justMyCode": true
    }
  ]
}